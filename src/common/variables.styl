@require 'icon.styl';
@require('./responsive');
@import url('https://fonts.googleapis.com/css?family=Oswald:300,400')


$lightblue = lightblue;
$lightgrey = lightgrey;

html {
  font-family: 'Oswald', sans-serif;
}

col(n)
  li
    column(1/n, $cycle: n)

page(n)
  +above(rupture.mobile-cutoff)
    column(1/n, $cycle: n)

wrapper()
  center(350px)
  +above(rupture.mobile-cutoff)
    center(800px)
  +above(rupture.desktop-cutoff)
    center(1000px)

.col3
  col(3)

.col2
  col(2)

.halfpage
  page(2)

.thirdpage
  page(3)
